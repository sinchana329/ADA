1 B. Find Minimum Cost Spanning Tree of a given undirected graph using
Kruskalâ€™s algorithm.
#include <stdio.h>

int cost[10][10], n, t[10][2], sum;

void kruskal(int cost[10][10], int n);
int find(int parent[10], int i);

int main() {
    int i, j;

    printf("Enter the number of vertices: ");
    scanf("%d", &n);

    printf("Enter the cost adjacency matrix:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &cost[i][j]);
            if (cost[i][j] == 0) // Avoid 0-cost loops (self edges)
                cost[i][j] = 999;
        }
    }

    kruskal(cost, n);

    printf("Edges of the Minimum Cost Spanning Tree:\n");
    for (i = 0; i < n - 1; i++) {
        printf("(%d, %d)\n", t[i][0], t[i][1]);
    }
    printf("Total cost of Minimum Spanning Tree: %d\n", sum);

    return 0;
}

void kruskal(int cost[10][10], int n) {
    int parent[10], count = 0, k = 0;
    int u, v, i, j, min;

    sum = 0;

    // Initialize parent array (each node is its own parent)
    for (i = 0; i < n; i++) {
        parent[i] = i;
    }

    while (count < n - 1) {
        min = 999;
        u = -1;
        v = -1;

        // Find the minimum weight edge that connects two different sets
        for (i = 0; i < n; i++) {
            for (j = 0; j < n; j++) {
                if (find(parent, i) != find(parent, j) && cost[i][j] < min) {
                    min = cost[i][j];
                    u = i;
                    v = j;
                }
            }
        }

        if (u != -1 && v != -1) {
            int root_u = find(parent, u);
            int root_v = find(parent, v);

            // Union
            if (root_u != root_v) {
                parent[root_u] = root_v;
                t[k][0] = u;
                t[k][1] = v;
                k++;
                sum += min;
                count++;
            }

            // Mark edge as used
            cost[u][v] = cost[v][u] = 999;
        } else {
            break;
        }
    }
}

int find(int parent[10], int i) {
    while (parent[i] != i) {
        i = parent[i];
    }
    return i;
}
